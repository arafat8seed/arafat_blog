<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.username %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<% render 'comments/from', comment: Comment.new%>

<% @post.comments.each do |comment|%>
<div class="well">
  <h5><% comment.author%> says...</h5>
  <p><% comment.comment_entry%>
  </p>

</div>
<%end%>
